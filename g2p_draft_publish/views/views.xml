    <record id="view_g2p_partner_search" model="ir.ui.view">
        <field name="name">G2PPartner Search</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Farmer Record Search">
                <filter name="validation_stage" string="Draft" domain="[('validation_stage', '=', 'draft')]"/>
                <filter name="validation_stage2" string="Complete" domain="[('validation_stage', '=', 'complete')]"/>
                <filter name="validation_stage3" string="Published" domain="[('validation_stage', '=', 'added')]"/>
                <separator/>
                <filter name="record_from1" string="E-voucher" domain="[('record_from', 'ilike', '%E-Voucher%')]"/>
                <filter name="record_from2" string="NMIS" domain="[('record_from', 'ilike', '%NMIS%')]"/>
                <filter name="record_from3" string="8028" domain="[('record_from', 'ilike', '%8028%')]"/>
                <group expand="0" string="Group By">
                    <filter name="validation_stage" string="Stage" domain="[]" context="{'group_by': 'validation_stage'}"/>
                    <filter name="record_type" string="Type" domain="[]" context="{'group_by': 'record_type'}"/>
                    <filter name="record_from" string="DB" domain="[]" context="{'group_by': 'record_from'}"/>
                </group>
            </search>
        </field>
    </record>



    <record id="view_resp_form_inherited" model="ir.ui.view">
        <field name="name">res.model.form inherited2</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_complete" type="object" string="Complete" invisible="validation_stage!='draft'" class="btn btn-info" />
                    <button name="action_done" type="object" string="Publish" invisible="validation_stage!='complete'" class="btn btn-success" />
                    <field name="validation_stage" widget="statusbar" statusbar_visible="draft,complete,added" />
                </header>
                <sheet>
                    <div class="oe_title mb24">
                        <field name="is_company" invisible="1"/>
                        <field name="type" invisible="1"/>
                        <h1>
                            <field id="individual" options="{'line_breaks': False}" widget="text" class="text-break" name="name" default_focus="1" placeholder="e.g. Brandom Freeman" invisible="is_company" required="type == 'contact'"/>
                        </h1>
                    </div>
                    <group colspan="12" cols="12">
                        <group>
                            <field name="record_type" readonly="1"/>
                        </group>
                        <group >
                            <field name="record_from" readonly="1"/>
                        </group>
                        <group>
                            <field name="validation_status"/>
                        </group>
                        <group>
                            <field name="write_date"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
