<record id="action_view_res_partner_following_restriction" model="ir.actions.server">
    <field name="name">Imported Farmer Records</field>
    <field name="model_id" ref="base.model_res_partner"/>
    <field name="state">code</field>
    <field name="code">
         action = model.view_imported_farmer_records()
    </field>
</record>



