<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <record id="rejection_form_wizard_view" model="ir.ui.view">
    <field name="name">draft.imported.record.form</field>
    <field name="model">draft.imported.record</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="rejection_reason"/>
            </group>

            <footer>
                <button name="action_reject" string="Reject" type="object"/>
            </footer>
        </form>
    </field>
</record>



<record id="reject_wizard_view" model="ir.ui.view">
        <field name="name">reject.wizard.form</field>
        <field name="model">reject.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="rejection_reason"/>
                </group>
                <footer>
                    <button name="confirm_rejection" string="Confirm Rejection" type="object" class="btn btn-warning"/>
                </footer>
            </form>
        </field>
    </record>



<record id="reject_wizard_action" model="ir.actions.act_window">
    <field name="name">Confirm Rejection</field>
    <field name="res_model">reject.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>



</odoo>
